<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <h1>URL Shortener</h1>
  <form action="/shorten-url" method="post">
    <label for="url">URL:</label>
    <input type="text" name="url" id="url" placeholder="Enter URL" />
    <button type="submit">Shorten</button>
  </form>

  <h2>Shortened URLs</h2>
  <table>
    <thead>
      <tr>
        <th>Original URL</th>
        <th>Shortened URL</th>
        <th>Clicks</th>
      </tr>
    </thead>
    <tbody>
      <% shortUrls.forEach((url) => { %>
        <tr>
          <td><%= url.full_url %></td>
          <td><a href="<%= url.short_url %>"><%= url.short_url %></a></td>
          <td><%= url.url_clicks %></td>
        </tr>
      <% }); %>
  </table>
</body>
</html>